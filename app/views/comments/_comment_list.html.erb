<% topic.comments.order(created_at: :asc).each do |comment| %>
  <li class="list-group-item">
    <%= profile_img comment.user, size: '30x30', style: 'margin-right: 10px' %>
    <span style="font-weight: bold"><%= comment.user.name %></span>
    <%= comment.content %>
    <% if comment.user.id == current_user.id %>
      <%= form_for comment, method: :delete, data: { remote: true, confirm: '削除してよろしいですか？' }, html: { class: 'pull-right' } do |f| %>
        <button class="btn btn-danger">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      <% end %>
      <%= link_to edit_comment_path(comment), remote: true, class: 'btn btn-success pull-right' do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
    <% end %>
  </li>
<% end %>

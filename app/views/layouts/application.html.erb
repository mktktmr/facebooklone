<!DOCTYPE html>
<html>
<head>
  <title>Facebooklone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/header' %>
  <%= render 'users/user_modal' if user_signed_in? %>
  <%= render 'users/message_modal' if user_signed_in? %>
  <%= render 'topics/edit_modal' if user_signed_in? %>
  <%= render 'comments/edit_modal' if user_signed_in? %>

  <%= yield %>

</body>
</html>
